@model List<ChatApp.Models.UserListViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>اختر مستخدم للدردشة</h2>

@if (Model == null || !Model.Any())
{
    <p>لا يوجد مستخدمين متاحين للدردشة.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>الاسم</th>
                <th>البريد الإلكتروني</th>
                <th>إجراء</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.DisplayName</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-controller="Chat" asp-action="PrivateChat" asp-route-receiverId="@user.Id" class="btn btn-primary">بدء الدردشة</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}