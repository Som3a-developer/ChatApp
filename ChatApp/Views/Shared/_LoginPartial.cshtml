@if (User.Identity.IsAuthenticated)
{
    <form asp-controller="Home" asp-action="Login" method="post" class="form-inline">
        <button type="submit" class="btn btn-link">تسجيل الخروج</button>
    </form>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Login">تسجيل الدخول</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Register">التسجيل</a>
        </li>
    </ul>
}